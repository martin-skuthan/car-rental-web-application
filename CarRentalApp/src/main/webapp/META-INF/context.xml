<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/com-turreta-cdi-servlet-demo">
  <Resource
    name="BeanManager"
    auth="Container"
    type="javax.enterprise.inject.spi.BeanManager"
    factory="org.jboss.weld.resources.ManagerObjectFactory"
    />
  
  <Resource auth="Container" 
 name="jdbc/store" 
 type="com.mchange.v2.c3p0.ComboPooledDataSource" 
 driverClass="com.mysql.jdbc.Driver" 
 minPoolSize="5" maxPoolSize="10" 
 factory="org.apache.naming.factory.BeanFactory"
 jdbcUrl="jdbc:mysql://libraree.cnn0owmudcjs.eu-central-1.rds.amazonaws.com/libraree" 
 user="admin" password="65003000" />   
  <Resource name="jdbc/user_auth" 
		auth="Container" 
		type="com.mchange.v2.c3p0.ComboPooledDataSource" 
		minPoolSize="5"
		maxPoolSize="20"
		username="admin" 
		password="65003000" 
		driverClassName="com.mysql.cj.jdbc.Driver"
		factory="org.apache.naming.factory.BeanFactory"
		url="jdbc:mysql://libraree.cnn0owmudcjs.eu-central-1.rds.amazonaws.com/libraree" />
	<Realm className="org.apache.catalina.realm.DataSourceRealm" 
		dataSourceName="jdbc/store"
		userTable="User" 
		userNameCol="username" 
		userCredCol="password"
		userRoleTable="User_Role"
		roleNameCol="role_name"
		localDataSource="true"
		digest="MD5"
		>
		<CredentialHandler className="org.apache.catalina.realm.MessageDigestCredentialHandler"
          algorithm="MD5"
          iterations="1"
          saltlenght="0"
        />
		</Realm>
</Context>